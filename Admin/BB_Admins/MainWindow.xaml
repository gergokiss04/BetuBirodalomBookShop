<Window x:Class="BB_Admins.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BB_Admins"
        mc:Ignorable="d"
        Title="BB_Admin" Height="100" Width="300"  Closing="MainWindow_Closing" WindowStartupLocation="CenterScreen" Background="Transparent" Icon="/logo2 (1).png">
    <DockPanel Background="Transparent">
        <!--Navigáló gombok a könyvek, megrendelések kezelőfelületeihez, illetve az ablakot bezáró gomb-->
        <Button x:Name="admin" Click="Admin" Background="Transparent" Foreground="Yellow" FontWeight="Bold" HorizontalAlignment="Left" Width="100">Könyvek</Button>
        <Button x:Name="order" Click="Order" Background="Transparent" Foreground="Yellow" FontWeight="Bold" Content="Megrendelések" HorizontalAlignment="Center" Width="100"/>
        <Button x:Name="exit" Click="Exit" Background="Transparent" Foreground="Yellow" FontWeight="Bold" HorizontalAlignment="Right" Width="100">Exit</Button>
    </DockPanel>
</Window>
